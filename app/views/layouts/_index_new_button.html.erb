<% link_hash = {:ajax_id => @ajax_id} -%>
<% link_hash.merge!({:show_id => @show_object.id, :from_show_table => @from_show_table}) if @from_show_table -%>
<%= link_to(icon("icon-plus-sign icon-large") + t(:new), self.send("new_#{@model_class.to_s.underscore}_path", link_hash), :remote => true, :class => "btn btn-success spinner") %>
<% if @relation == :has_and_belongs_to_many or @relation == :has_many_through %>
	<% link_hash[:add_existing_model] = true %>
	<% link_hash[:previous_ajax_id] = @ajax_id %>
	<% link_hash.delete(:ajax_id) %>
	<%= link_to(icon("icon-tasks icon-large") + t(:modify_existing_model), self.send("new_#{@model_class.to_s.underscore}_path", link_hash), :remote => true, :class => "btn btn-info") %>
<% end %>
