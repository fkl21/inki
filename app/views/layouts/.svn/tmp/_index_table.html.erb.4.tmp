<div id="list_<%= @ajax_id -%>">
	<table class="list_table">
		<thead>
			<tr>
				<% @fields.each do |field| %>
					<th >
						<%= translate_and_link(@model_class.new, field) %>
					</th>
				<% end -%>
				<th>
					<%= t(:options) %>
				</th>
				<th class="table_widener">
				</th>
			</tr>
		</thead>
		<tbody>
			<% @objects.each do |object| %>
				<% id = "#{@model_class.to_s}_#{object.id}" -%>
				<tr <%= get_tr_css_style(object, @colors) %> id="<%= "tr_#{@ajax_id}_#{id}" %>">
					<% @fields.each do |field| %>
						<td class="content_td" id="<%= "#{id}_#{field}" -%>" <%= column_style(@model_class, field) -%>>
							<%= show_attribute_value(object, field) %>
						</td>
					<% end -%>
					<td class="options_td" id="<%= "#{id}_options" -%>">
						<%= option_buttons(object) %>
					</td>
					<td class="table_widener">
					</td>
				</tr>
				<!--tr style="display:none;" id="<%= id -%>"--> 
				<tr class="show_table_row" id = "tr_<%= id -%>"> 
					<td class="show_table_column" colspan="<%= @fields.count + 2 -%>" id="<%= id -%>">
					</td>
				</tr>
			<% end %>
		</tbody>
		<tfoot>
			<tr>
				<td colspan="<%= @fields.count + 1 -%>">
					<%= render :partial => "layouts/index_pagination" %>
				</td>
				<td class="table_widener">
				</td>
			</tr>
		</tfoot>
	</table>
</div>
