<!-- this layout generates the menu -->
<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<%= link_to(Rails.configuration.inki.brand, '/', :class => "brand") %>
			<div class="nav-collapse collapse">
				<ul class="nav">
					<% if @menu_items and @menu_items.size > 0 %>
						<% a_m = active_menu(@menu_items) %>
						<% logger.info("active menu is: #{a_m}") %>
						<%= menu_link(@menu_items, 0, :active_menu => a_m) %>
					<% end -%>
				</ul>
				<%= render(:file => "layouts/menu_extra", :handlers => [:erb]) %>
			</div>
		</div>
	</div>
</div>
