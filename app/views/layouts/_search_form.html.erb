<% if @right and @model_class.searching_enabled? -%>
	<% link_hash = {:action => :search, :ajax_id => @ajax_id} -%>
	<% link_hash.merge!({
		:show_id => @show_object.id, 
		:from_show_table => @from_show_table, 
		:show_relation => @show_relation,
		:add_existing_model => @add_existing_model,
		:previous_ajax_id => @previous_ajax_id,
	}) if @from_show_table -%>
	<div class="input-group">
		<%= form_tag(link_hash, :method => 'post', :remote => true, :class => "input-group") do %>
			<span class="input-group-btn">
				<label for="search_button_<%= @ajax_id %>" class="btn btn-default">
					<span class="glyphicon glyphicon-search"></span>
				</label>
				<%= button_tag(t(:search), :class => "hidden spinner", :id => "search_button_#{@ajax_id}") %>
			</span>
			<%= text_field_tag('search', @search_string, :type => "search", :class => "form-control", :placeholder => t(:search)) %>
			<span class="input-group-btn<%= ' hidden' if not @search_string or @search_string == '' %>">
					<%= link_to '<span class="glyphicon glyphicon-remove-circle"></span>'.html_safe, link_hash.merge(:search => ""), :remote => true, :class => "spinner btn btn-default" %>
			</span>
		<% end -%>
	</div> <!-- input-group-->
<% end -%>
