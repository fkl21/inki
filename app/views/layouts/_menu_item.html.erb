<!-- find the active link to make the menu more user-friendly -->
<% my_controller = t[:link][:controller] -%>
<% if true # get_user_right(my_controller) != :none -%>
  <% if my_controller == request.parameters["controller"] and t[:link][:action] == request.parameters["action"] -%>
    <li class="active_submenu">
    <%= link_to t(t[:name]), t[:link], {:class => "active_menu"} %>
  <% else -%>
    <li class="submenu">
    <%= link_to t(t[:name]), t[:link] %>
  <% end -%>
  </li>
<% end %>
